  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteOfferServlet</servlet-name>
    <url-pattern>/DeleteOfferServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.carpooling.filters.AuthFilter</filter-class>
    <init-param>
      <param-name>loginActionURI</param-name>
      <param-value>/LoginServlet</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/bid/*</url-pattern>
    <url-pattern>/BiddingServlet</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>401</error-code>
    <location>/accessDenied.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/accessDenied.jsp</location>
  </error-page>
</web-app>