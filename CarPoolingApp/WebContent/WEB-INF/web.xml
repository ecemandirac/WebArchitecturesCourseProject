<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CarPoolingApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>FindCityServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.FindCityServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RideOffersServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.RideOffersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserPageServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.UserPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BiddingServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.BiddingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.EditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OfferPageServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.OfferPageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InsertOfferServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.InsertOfferServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowBidsServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.ShowBidsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowOffersServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.ShowOffersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteOfferServlet</servlet-name>
    <servlet-class>com.carpooling.servlet.DeleteOfferServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FindCityServlet</servlet-name>
    <url-pattern>/FindCityServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RideOffersServlet</servlet-name>
    <url-pattern>/RideOffersServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserPageServlet</servlet-name>
    <url-pattern>/UserPageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BiddingServlet</servlet-name>
    <url-pattern>/BiddingServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/RegistrationServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OfferPageServlet</servlet-name>
    <url-pattern>/OfferPageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InsertOfferServlet</servlet-name>
    <url-pattern>/InsertOfferServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowBidsServlet</servlet-name>
    <url-pattern>/ShowBidsServlet</url-pattern>
